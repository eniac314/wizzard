-- Initial wizzard.cabal generated by cabal init.  For further 
-- documentation, see http://haskell.org/cabal/users-guide/

name:                wizzard
version:             0.1.0.0
synopsis:            basic 2D game project
-- description:         
homepage:            https://github.com/eniac314/wizzard
license:             BSD3
license-file:        LICENSE
author:              fayong
maintainer:          eniac314@gmail.com
-- copyright:           
category:            Game
build-type:          Simple
-- extra-source-files:  
cabal-version:       >=1.10

library
 exposed-modules:
  Graphics.UI.SDL
  Graphics.UI.SDL.Primitives
  Graphics.UI.SDL.Image
  Graphics.UI.SDL.Framerate
  Graphics.UI.SDL.Mixer

executable wizzard
  main-is: main.hs
  -- other-modules:       
  other-extensions: BangPatterns   
  build-depends:       base >=4.6 && <5, SDL >=0.6 && <0.7, SDL-gfx >=0.6 && <0.7, SDL-image >=0.6 && <0.7,  SDL-mixer >=0.6 && <0.7, vector >=0.10 && <=0.14, containers >=0.5 && <0.6, random >=1.0 && <=1.1, deepseq >=1.3 && <=1.5
  hs-source-dirs:      src
  default-language:    Haskell2010 
  ghc-options: -O2
 cc-options: -fPIC 
 default-extensions: BangPatterns
